<div class="right_col" role="main">
  <div class="">
    <div class="row">

      <div class="title_left">
          <h3>Mostrar Solicitud</h3> 
      </div>

      <div class="x_panel">
        <div class="x_title">

          <% if notice.present? %>
            <div class="alert alert-info alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span></button> 
                <%= notice %>
            </div>
          <% end %>

          <h2>Formulario Solicitud</h2>

            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>

          <div class="clearfix"></div>

        </div>

        <div class="x_content">
        <br/>

          <div class="col-md-1 col-xs-0"></div>
          
            <div class="row">
              <div class="col-md-10 col-sm-10 col-xs-10">
                <div class="panel panel-primary" style="margin: 1em;">

                  <div class="panel-heading" style="padding: 10px 15px;">
                    <h1 class="panel-title"><i class="fa fa-file-text"></i> Solicitud Laboral</h1>  
                  </div>

                    <div class="row">
                    <br>

                      <div class="panel-body" style="padding: 10px;">
                        
                        <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                          <center>
                            <strong>Usuario:</strong>
                            <div><%= @request.user.nombre_completo_user %></div>
                          </center>
                        </div>

                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <hr style="border-color:black; margin-bottom: 0px;">
                        </div> 

                      </div>

                    </div>

                    <div class="row">
                    <br>

                      <div class="panel-body" style="padding: 10px;">

                        <div class="col-md-3 hidden-sm has-feedback"></div>  

                        <div class="col-md-2 col-sm-12 col-xs-12 has-feedback">
                          <strong>Especialidad:</strong>
                          <div><%= @request.especialidad_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                          <strong>Habilidad(es):</strong>
                          <div><%= @request.habilidad_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                          <strong>Disponibilidad:</strong>
                          <div><%= @request.disponibilidad_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-3 has-feedback"></div> 

                        <div class="col-md-12 col-sm-12 col-xs-12">
                          <hr style="border-color:black; margin-bottom: 0px;">
                        </div> 
                                  
                      </div>

                    </div>

                    <div class="row">
                    <br>

                      <div class="panel-body" style="padding: 10px;">

                        <div class="col-md-3 hidden-sm has-feedback"></div>  

                        <div class="col-md-2 col-sm-12 col-xs-12 has-feedback">
                          <strong>Idioma(s):</strong>
                          <div><%= @request.idioma_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                          <strong>Ingresos esperados:</strong>
                          <div><%= @request.ingreso_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                          <strong>Informaci√≥n Adicional:</strong>
                          <div><%= @request.informacion_solicitud %></div>
                          <br>
                        </div>

                        <div class="col-md-3 has-feedback"></div> 

                      </div>

                    </div>

                    <div class="panel-heading" style="padding: 10px;">
                      <h2 class="panel-title"><i class="fa fa-briefcase"></i> Curriculum </h2>  
                    </div>

                    <div class="row">
                    <br>

                      <div class="panel-body" style="padding: 10px;">
                        
                        <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                          <center><strong> Descargar Curriculum:</strong></center>
                          <center>
                            <%= link_to '<i class="glyphicon glyphicon-download-alt" style="color: white; "></i>'.html_safe, @request.curriculum_solicitud.url, class: "btn btnxlr-primaryxlr btn-lg btn3dxlr", target: '_blank' %>
                          </center>
                          <br>
                        </div>

                      </div>

                    </div>

                </div>
              </div>
            </div>

          <div class="col-md-1 col-xs-0"></div>  

        </div>

      </div>

        <%= link_to 'Volver', requests_path, :class => "btn btn-round btn-dark" %>

      <% if policy(@request).edit? %>
        <%= link_to 'Editar', edit_request_path(@request), :class => "btn btn-round btn-primary" %>
      <% end %>

      <% if policy(@request).new? %>
        <%= link_to 'Nuevo', new_request_path, :class => "btn btn-round btn-success" %>  
      <% end %>

    </div>
  </div>
</div>





