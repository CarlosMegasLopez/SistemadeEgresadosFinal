<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="x_title">
            
            <% if notice.present? %>
              <div class="alert alert-info alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span>
                </button> 
                <%= notice %>
              </div>
            <% end %>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 ribbontitlexlr" style="background: #1787b5">
              Solicitudes
            </div>
            
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            
            <div class="clearfix"></div>

          </div>

          <% if policy(:request).new? %>
            <%= link_to '<i class="fa fa-plus"></i> Nueva Solicitud'.html_safe, new_request_path, class: "btn btn-mini btn-success" %>
          <% end %>

          <center>
            <%# link_to '<i class="fa fa-file-excel-o"></i> Excel'.html_safe, graduates_path(format: "xls"), class: "btn btn-mini btn-success" %>

            <%# link_to '<i class="fa fa-file-pdf-o"></i> PDF'.html_safe, graduates_path(format: "pdf"), class: "btn btn-mini btn-danger", target: '_blank' %>

            <%# link_to '<i class="fa fa-file-excel-o"></i> CSV'.html_safe, graduates_path(format: "csv"), class: "btn btn-mini btn-success" %>
          </center>

          <div class="x_content">
            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">

              <thead>
                <tr>
                  <th>Usuario</th>
                  <th>Especialidad</th>
                  <th>Curriculum</th>
                  <th>Opciones</th>
                </tr>
              </thead>

              <tbody>
                <% @requests.each do |request| %>
                  <tr>
                  <td><%= request.user.nombre_completo_user %></td>
                  <td><%= request.especialidad_solicitud %></td>
                  <td>
                    <center>
                      <%= link_to '<i class="glyphicon glyphicon-download-alt" style="color: white; "></i>'.html_safe, request.curriculum_solicitud.url, class: "btn btn-primary", target: '_blank' %> 
                    </center>  
                  </td>
                  
                    <td>
                      <center>
                          <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, request, class: "btn btn-mini btn-info" %>

                        <% if policy(request).edit? %>
                          <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_request_path(request), class: "btn btn-mini btn-primary" %>
                        <% end %>  

                        <% if policy(request).destroy? %>
                          <%= link_to request, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: 'Â¿Eliminar Elemento?' } do %>
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                          <% end %>
                        <% end %>

                      </center>
                    </td>

                  </tr>
                <% end %>
              </tbody>

            </table>
          </div>               

        </div>
      </div>
    </div>
  </div>
</div>
