<div class="container" > 
  <div class="col-lg-4 col-md-3 col-sm-2"></div>
    <div class="col-lg-4 col-md-6 col-sm-8">
            
      <div style="text-align: center; "><%= link_to image_tag("logofinal.png", alt: "logo") %></div>
        
        <div class="row loginbox"> 

          <div class="col-lg-12">

              <center>
                <h1 style="font-size: 21px;""><i class="fa fa-graduation-cap" style="font-size: 21px; color: #127bde;"></i> Sistema de Seguimiento de Egresados UAA</h1>
              </center>
              <br>

              <center>
                <span class="singtext">Cambiar Contraseña</span>
              </center>
              <br>

              <div style="text-align: center; font-weight: bold;">
              Por favor, proporcionenos una nueva contraseña.</div>
              <br>
              
            </div>

            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
            
              <%= f.hidden_field :reset_password_token %>

              <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
          
                <% if @minimum_password_length %>
                  <em id="showhide" data-val='1'>(Mínimo <%= @minimum_password_length %> caracteres)<i class="fa fa-eye" id="eye" data-val='1'></i></em>
                <% end %><br />
                      
                <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                    <span class="fa fa-lock form-control-feedback right" aria-hidden="true"></span>
                    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder =>"Contraseña",  :required => "", :id => "pwd"  %>
                    <span class="help-inline", style="color:red">
                    <%= @user.errors[:password].any? ? @user.errors[:password].to_s[/\w([^"]*)/] : "" %></span>
                  </div>
                </div>

              </div>

              <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">

                <div class="row">
                  <div class= "col-md-12 col-sm-12 col-xs-12" >
                    <he id="showhide2" data-val='1'><i class="fa fa-eye" id="eye2" data-val='1'></i></he>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                    <span class="fa fa-check-square form-control-feedback right" aria-hidden="true"></span>
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", :placeholder =>"Confirmar Contraseña",  :required => "", :id => "pwd2"  %>
                    <span class="help-inline", style="color:red">
                    <%= @user.errors[:password_confirmation].any? ? @user.errors[:password_confirmation].to_s[/\w([^"]*)/] : "" %></span>
                  </div>
                </div>

              </div>
       
              <div>
                <div class="actions">
                  <%= button_tag type: 'submit' , class: "btn  submitButton" do %>
                    <i class="fa fa-check" aria-hidden="true"></i> Cambiar contraseña
                  <% end %>
                </div>            
              </div>

              <br>

              <div class="row">
                <div class= "col-md-12 col-sm-12 col-xs-12" >
                  <div style="text-align: center; margin-bottom: 10px"><%= link_to image_tag("sisomos.png", alt: "logo") %></div>
                </div>
              </div>

            <% end %>

            <div class="row">
              <center>
                <div class="col-md-12 col-sm-12 col-xs-12">
                  <h>Av. Costera Miguel Alemán No. 1756, Fracc. Magallanes, Acapulco, Guerrero, México. C.P. 39670.</h>
                </div>
              </center>
            </div>

            <div class="row">
              <center>
                <div class="col-md-12 col-sm-12 col-xs-12">
                  <i class="fa fa-phone"></i>Tel: (01 744) 469-17-00  |
                  <i class="fa fa-fax"></i>
                   Fax: (01 744) 469-17-98  
                </div>
              </center>
            </div>

            <br>

            <div class="row">
              <center> 
                  <div class="col-md-12 col-sm-12 col-xs-12" style="font-size: 13px;">
                  ¡Síguenos en nuestras redes sociales!
                </div>
              </center>
            </div>

            <div class="row">
              <center>
                <div class="col-md-12 col-sm-12 col-xs-12">
                  <a href="https://www.facebook.com/EgresadosUAA" target="_blank"><i id="social-fbf" class="fa fa-facebook-square fa-3x social-f"></i></a>
