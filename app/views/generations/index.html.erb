<div class="right_col" role="main">
    <div class="">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                          <div class="x_title">

                                   <% if notice.present? %>
                                    <div class="alert alert-info alert-dismissible fade in" role="alert">
                                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span>
                                      </button> 
                                      <%= notice %>
                                    </div>
                                   <% end %>

                            <h2>Generaciones</h2>
                            <ul class="nav navbar-right panel_toolbox">
                              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                              </li>
                            </ul>
                            <div class="clearfix"></div>
                          </div>

                        <%= link_to '<i class="fa fa-plus"></i> Nueva Generación'.html_safe, new_generation_path, class: "btn btn-mini btn-success" %>

                        <center>
                            <%= link_to '<i class="fa fa-file-excel-o"></i> Excel'.html_safe, generations_path(format: "xls"), class: "btn btn-mini btn-success" %>

                            <%= link_to '<i class="fa fa-file-pdf-o"></i> PDF'.html_safe, generations_path(format: "pdf"), class: "btn btn-mini btn-danger", target: '_blank' %>

                          <% if policy(:global).admin? %>
                            <%= link_to '<i class="fa fa-file-excel-o"></i> CSV'.html_safe, generations_path(format: "csv"), class: "btn btn-mini btn-success" %>
                          <% end %>


                        </center>

                          <div class="x_content">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                              <thead>
                            <tr>
                              <th>Facultad</th>
                              <th>Descripción</th>
                              <th>Opciones</th>
                            </tr>
                          </thead>
                          <tbody>
                             <% @generations.each do |generation| %>
                              <tr>
                                  <td><%= generation.career.descripcion_carrera %></td>
                                  <td><%= generation.descripcion_generacion %></td>
                                  <td>

                                  <center>

                                    <% if policy(generation).show? %>
                                      <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, 
                                      generation, class: "btn btn-mini btn-info" %>
                                    <% end %>

                                    <% if policy(generation).edit? %>
                                      <%= link_to '<i class="fa fa-edit"></i>'.html_safe, 
                                      edit_generation_path(generation), class: "btn btn-mini btn-primary" %>
                                    <% end %>

                                    <% if policy(generation).destroy? %>
                                      <%= link_to generation, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: '¿Eliminar Elemento?, todos los registros asociados a este serán eliminados.' } do %>
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                      <% end %>
                                    <% end %>    

                                  </center>
                                    
                                  </td>
                              </tr>
                             <% end %>
                          </tbody>
                            </table>
                        </div>
          </div>
        </div>
      </div>
    </div>
  </div>