<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="x_panel">
        <div class="x_title">

          <% if notice.present? %>
            <div class="alert alert-info alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span></button> 
                <%= notice %>
            </div>
          <% end %>

            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>

          <div class="clearfix"></div>

        </div>

        <div class="x_content">

            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="panel panel-primary" style="margin: 1em;">

                	<div class="panel-heading" style="padding: 10px 15px; 
                	background: <%= @article.category.color_categoria %>;">
                 		<h3 class="panel-title" style="text-align: justify;"><i class="fa fa-newspaper-o"></i> <%= @article.titulo_noticia %></h3>  
                 	</div>

                    <div class="row">
                    	<div class="panel-body" style="padding: 10px;">
                                
                        	<div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                            	<center>
                                	<%= image_tag @article.imagen_noticia.url, alt: "Imagen", class: "img-responsive img-thumbnail" %>
                                </center>
                            </div>

                            <div class="col-md-12 col-sm-12 col-xs-12">
                            	<hr style="border-color:black; margin-bottom: 0px;">
                            </div>

                        </div>
                    </div>
                  
                  	<div class="row">

                    	<div class="panel-body" style="padding: 10px;">
                        
                        	<div class="col-md-12 col-sm-12 col-xs-12 has-feedback">                
  		                    	<div style="font-style: italic; font-size: 12px;">
  		                      		<i class="fa fa-user" style="margin-right: 5px;"></i>Por: <%= @article.user.nombre_noticia_user %>
  		                    	</div>
  		                    	<div>
  		                    		<i class="fa fa-clock-o" style="margin-right: 5px;"></i><%=@article.created_at.strftime("%d/%m/%y") %>
  		                    	</div>
  		                    	<br>
	                            <div>
	                              	<%= @article.cuerpo_noticia.html_safe %>
	                            </div>
                       		</div>

                      	</div>

                    </div>

                </div>
              </div>
            </div>

        </div>

      </div>

      <%= link_to 'Volver', articles_path, :class => "btn btn-round btn-dark" %>

      <% if policy(@article).edit? %>
        <%= link_to 'Editar', edit_article_path(@article), :class => "btn btn-round btn-primary" %>
      <% end %>

      <% if policy(@article).new? %>
        <%= link_to 'Nuevo', new_article_path, :class => "btn btn-round btn-success" %>  
      <% end %>

    </div>
  </div>
</div>