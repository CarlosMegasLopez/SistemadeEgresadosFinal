<%= form_for(article) do |f| %>
  <div class="x_panel">
    <div class="x_title">
      <h2>Formulario Noticia</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
    <br/>

      <form class="form-horizontal form-label-left input_mask">

        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <ho style="color:#14B76E"> (*) Campo Obligatorio </ho>
          </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <br>

        <div class="row">

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback form-group">
            <%= f.label "Categoría" %> <ho style="color:#14B76E"> (*) </ho>
            <%= f.select :category_id, Category.all.map{|s| [s.nombre_categoria, s.id]}, {:prompt => "--Seleccionar--"}, class: "form-control"%>
            <span class="help-inline", style="color:red">
            <%= @article.errors[:category_id].any? ? @article.errors[:category_id].to_s[/\w([^"]*)/]: "" %></span>
            <br>
          </div>

         </div>

        <div class="ln_solid"></div>

        <div class="row">

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
              <i class="fa fa-picture-o" style= "margin-right: 10px;"></i><%= f.label "Añada una imagen:" %><ho style="color:#14B76E"> (*) </ho>
              <br>
              <br>
              <%= f.file_field :imagen_noticia %>
              <span class="help-inline", style="color:red">
              <%= @article.errors[:imagen_noticia].any? ? @article.errors[:imagen_noticia].to_s[/\w([\s|A-zA-Z]\w*)+(.|\s)+\w/]: "" %></span>
              <br>
          </div>

        </div>

        <div class="ln_solid"></div>  

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Título" %> <ho style="color:#14B76E"> (*) </ho>
            <%= f.text_area :titulo_noticia, class: "form-control", maxlength: "100", placeholder: "Título de no más de 100 caracteres" %>
            <span class="help-inline", style="color:red">
            <%= @article.errors[:titulo_noticia].any? ? @article.errors[:titulo_noticia].to_s[/\w([^"]*)/]: "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Cuerpo" %>
            <%= f.trix_editor :cuerpo_noticia, placeholder: "Añada el cuerpo de la noticia" %>
            <br>
          </div>
                      
        </div>

        <div class="ln_solid"></div>

      </form>

    </div>

    <div class="actions">
      <%= button_tag type: 'submit', class: 'btn btn-mini btn-success' do %>
        <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Aceptar
      <% end %>
    </div>

  </div>
<% end %>