<div class="right_col" role="main">
  <div class="">
    <div class="row">
	   <div class="title_left">
	        <h3>Mostrar Facultad</h3>        
	    </div>
		<div class="x_panel">
            <div class="x_title">

                <% if notice.present? %>
                  <div class="alert alert-info alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span></button> 
                      <%= notice %>
                  </div>
                <% end %>
                
              <h2>Formulario Facultad</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <br/>

            <div class="col-md-4 col-sm-4 col-xs-0"></div>
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="panel panel-primary" style="margin: 1em;">
                            <div class="panel-heading" style="padding: 10px 15px;">
                                <h3 class="panel-title"><i class="fa fa-university"></i> Información General</h3>  
                            </div>

                          <div class="row">
                            <div class="panel-body" style="padding: 10px;">
                                
                               <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                                <center>
                                  <%= image_tag @career.imagen_carrera.medium.url, class: "img-responsive img-thumbnail" %>
                                </center>
                              </div>

                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                              </div>

                            </div>
                          </div>

                          <div class="row">
                            <div class="panel-body" style="padding: 10px;">
                             
                              <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                                <center>
                                  <strong>Descripción:</strong>
                                  <div><%= @career.descripcion_carrera %></div>
                                </center>
                              </div>

                            </div>
                          </div>
 
                        </div>
                    </div>
                  </div>
                <div class="col-md-4 col-sm-4 col-xs-0"></div>  
            </div>
        </div>   
        
        <%= link_to 'Volver', careers_path, :class => "btn btn-round btn-dark" %>
	      <%= link_to 'Editar', edit_career_path(@career), :class => "btn btn-round btn-primary" %>
        <%= link_to 'Nuevo', new_career_path, :class => "btn btn-round btn-success" %>
	</div>
  </div>
</div>