<%= form_for(career) do |f| %>
          <div class="x_panel">
            <div class="x_title">
              <h2>Formulario Facultad</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <br/>

              <div class="col-md-8 center-margin">
                <form class="form-horizontal form-label-left">

                  <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <ho style="color:#14B76E"> (*) Campo Obligatorio </ho>
                    </div>
                  </div>

                  <br>

                  <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                    <i class="fa fa-picture-o" style= "margin-right: 10px;"></i><%= f.label "Imagen de facultad" %>
                      <br>
                      <br>
                      <%= f.file_field :imagen_carrera %>
                    </div>

                  </div>

                  <div class="row">
                  <br>

                    <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
                       <%= f.label :descripcion, "Descripción" %> <ho style="color:#14B76E"> (*) </ho>
                       <span class="fa fa-pencil form-control-feedback right" aria-hidden="true"></span>
                       <%= f.text_field :descripcion_carrera, class: "form-control", placeholder: "Añade un nombre para una Facultad" %>
                       <span class="help-inline", style="color:red">
                       <%= @career.errors[:descripcion_carrera].any? ? @career.errors[:descripcion_carrera].to_s[/\w([^"]*)/] : "" %></span>
                       <br>
                    </div>

                  </div>

                </form>
              </div>
            </div>
              <div class="actions">
               <%= button_tag type: 'submit', class: 'btn btn-mini btn-success' do %>
                 <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Aceptar
               <% end %>
            </div>
          </div>   
<% end %>
 