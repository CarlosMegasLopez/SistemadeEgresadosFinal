  <div class="right_col" role="main">
    <div class="">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                          <div class="x_title">

                                   <% if notice.present? %>
                                    <div class="alert alert-info alert-dismissible fade in" role="alert">
                                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span>
                                      </button> 
                                      <%= notice %>
                                    </div>
                                   <% end %>

                            <h2>Facultades</h2>
                            <ul class="nav navbar-right panel_toolbox">
                              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                              </li>
                            </ul>
                            <div class="clearfix"></div>
                          </div>

                        <%= link_to '<i class="fa fa-plus"></i> Nueva Facultad'.html_safe, new_career_path, class: "btn btn-mini btn-success" %>

                        <center>
                        <%= link_to '<i class="fa fa-file-excel-o"></i> Excel'.html_safe, careers_path(format: "xls"), class: "btn btn-mini btn-success" %>

                        <%= link_to '<i class="fa fa-file-pdf-o"></i> PDF'.html_safe, careers_path(format: "pdf"), class: "btn btn-mini btn-danger", target: '_blank' %>

                        <%= link_to '<i class="fa fa-file-excel-o"></i> CSV'.html_safe, careers_path(format: "csv"), class: "btn btn-mini btn-success" %>
                      </center>

                          <div class="x_content">

                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                              <thead>
                            <tr>
                              <th>Imagen</th>
                              <th>Descripción</th>
                              <th>Opciones</th>
                            </tr>
                          </thead>
                          <tbody>
                             <% @careers.each do |career| %>
                              <tr>
                                  <td><center><%= image_tag career.imagen_carrera.thumb.url, class: "img-circle" %></center></td>
                                   <td><center><%= career.descripcion_carrera %></center></td>
                                  <td>

                                  <center>
                                    <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, 
                                    career, class: "btn btn-mini btn-info" %>

                                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, 
                                    edit_career_path(career), class: "btn btn-mini btn-primary" %>

                                    <%= link_to career, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: '¿Eliminar Elemento?, todos los registros asociados a este serán eliminados.' } do %>
                                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    <% end %>
                                  </center>  
                                    
                                  </td>
                              </tr>
                             <% end %>
                          </tbody>
                            </table>
                        </div>
          </div>
        </div>
      </div>
    </div>
  </div>

