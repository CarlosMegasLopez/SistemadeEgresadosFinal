<div class="right_col" role="main">
    <div class="">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                          <div class="x_title">

                                   <% if notice.present? %>
                                    <div class="alert alert-info alert-dismissible fade in" role="alert">
                                      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span>
                                      </button> 
                                      <%= notice %>
                                    </div>
                                   <% end %>

                            <h2>Empresas</h2>
                            <ul class="nav navbar-right panel_toolbox">
                              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                              </li>
                            </ul>
                            <div class="clearfix"></div>
                          </div>

                        <%= link_to '<i class="fa fa-plus"></i> Nueva Empresa'.html_safe, new_association_path, class: "btn btn-mini btn-success" %>

                      <center>
                        <%= link_to '<i class="fa fa-file-excel-o"></i> Excel'.html_safe, associations_path(format: "xls"), class: "btn btn-mini btn-success" %>

                        <%= link_to '<i class="fa fa-file-pdf-o"></i> PDF'.html_safe, associations_path(format: "pdf"), class: "btn btn-mini btn-danger", target: '_blank' %>

                        <%= link_to '<i class="fa fa-file-excel-o"></i> CSV'.html_safe, associations_path(format: "csv"), class: "btn btn-mini btn-success" %>
                      </center>

                          <div class="x_content">
                            <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                              <thead>
                            <tr>
                              <th>Nombre</th>
                              <th>Contacto</th>
                              <th>Celular</th>
                              <th>Teléfono</th>
                              <th>Correo Electrónico</th>
                              <th>Opciones</th>
                            </tr>
                          </thead>
                          <tbody>
                             <% @associations.each do |association| %>
                              <tr>
                                  <td><%= association.nombre_empresa %></td>
                                  <td><%= association.contacto_empresa %></td>
                                  <td><%= association.celular_empresa %></td>
                                  <td><%= association.telefono_empresa %></td>
                                  <td><%= association.correo_electronico_empresa %></td>
                                  <td>

                                  <center>
                                    <%= link_to '<i class="glyphicon glyphicon-eye-open"></i>'.html_safe, 
                                    association, class: "btn btn-mini btn-info" %>

                                    <%= link_to '<i class="fa fa-edit"></i>'.html_safe, 
                                    edit_association_path(association), class: "btn btn-mini btn-primary" %>

                                    <%= link_to association, class: "btn btn-mini btn-danger", method: :delete, data: { confirm: '¿Eliminar Elemento?' } do %>
                                      <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    <% end %>
                                  </center>
                                  
                                  </td>
                              </tr>
                             <% end %>
                          </tbody>
                            </table>
                        </div>
          </div>
        </div>
      </div>
    </div>
  </div>