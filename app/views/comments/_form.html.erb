<%= form_for(comment) do |f| %>
  <div class="x_panel">
    <div class="x_title">
      <h2>Formulario Comentario</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
    <br/>

      <form class="form-horizontal form-label-left input_mask">

        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <ho style="color:#14B76E"> (*) Campo Obligatorio </ho>
          </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
          <% if @comment.new_record? %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :facultad, value: current_user.career.descripcion_carrera %>
              <% else %>
                <% if !@comment.user_id == current_user.id %>
                   <%= f.hidden_field :user_id, :readonly => true %>
                   <%= f.hidden_field :facultad, :readonly => true %>
                <% end %>
          <% end %>
          <br>
        </div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Título" %> <ho style="color:#14B76E"> (*) </ho>
            <span class="fa fa-pencil form-control-feedback right" aria-hidden="true"></span>
            <%= f.text_field :titulo, class: "form-control", maxlength: "100", placeholder: "Título de no más de 100 caracteres" %>
            <span class="help-inline", style="color:red">
            <%= @comment.errors[:titulo].any? ? @comment.errors[:titulo].to_s[/\w([^"]*)/] : "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Comentario" %> <ho style="color:#14B76E"> (*) </ho>
            <%= f.text_area :descripcion, class: "form-control", maxlength: "200", placeholder: "Comentario de no más de 200 caracteres" %>
            <div class="textarea-counterxlr"><span></span></div>
            <span class="help-inline", style="color:red">
            <%= @comment.errors[:descripcion].any? ? @comment.errors[:descripcion].to_s[/\w([^"]*)/] : "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="ln_solid"></div>

      </form>

    </div>

    <div class="actions">
      <%= button_tag type: 'submit', class: 'btn btn-mini btn-success' do %>
        <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Aceptar
      <% end %>
    </div>

  </div>
<% end %>
  