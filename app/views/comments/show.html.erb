<div class="right_col" role="main">
  <div class="">
    <div class="row">

      <div class="title_left">
          <h3>Mostrar Comentario</h3> 
      </div>

      <div class="x_panel">
        <div class="x_title">

          <% if notice.present? %>
            <div class="alert alert-info alert-dismissible fade in" role="alert">
              <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span></button> 
                <%= notice %>
            </div>
          <% end %>

          <h2>Formulario Comentario</h2>

            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>

          <div class="clearfix"></div>

        </div>

        <div class="x_content">
        <br/>

          <div class="col-md-1 col-xs-0"></div>
          
            <div class="row">
              <div class="col-md-10 col-sm-10 col-xs-10">
                <div class="panel panel-primary" style="margin: 1em;">

                  <div class="panel-heading" style="padding: 10px 15px;">
                    <h1 class="panel-title"><i class="glyphicon glyphicon-comment"></i> Comentario</h1>  
                  </div>

                  <div class="row">
                    <br>

                      <div class="panel-body" style="padding: 10px;">
                        
                        <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">                   
		                    <div style="text-align: justify; font-weight: bold; font-size: 20px">
		                      <%= @comment.titulo %>
		                    </div>
		                    <div style="text-align: justify; font-style: italic; font-size: 12px">
		                      Por: <%= @comment.user.nombre_completo_user %>
		                    </div>
		                    <br>
		                    <div style="text-align: justify; font-size: 14px">
		                      <%= @comment.descripcion %>
		                    </div>
                        </div>

                      </div>

                    </div>

                </div>
              </div>
            </div>

          <div class="col-md-1 col-xs-0"></div>  

        </div>

      </div>

        <%= link_to 'Volver', comments_path, :class => "btn btn-round btn-dark" %>

      <% if policy(@comment).edit? %>
        <%= link_to 'Editar', edit_comment_path(@comment), :class => "btn btn-round btn-primary" %>
      <% end %>

        <%= link_to 'Nuevo', new_comment_path, :class => "btn btn-round btn-success" %>  

    </div>
  </div>
</div>