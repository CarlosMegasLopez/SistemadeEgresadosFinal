<div class="right_col" role="main">
  <div class="">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">

          <div class="x_title">
            <% if notice.present? %>
              <div class="alert alert-info alert-dismissible fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span>
                </button> 
                  <%= notice %>
              </div>
            <% end %>

            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 ribbontitlexlr" style="background: #1787b5">
              Comentarios
            </div>
            
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            
            <div class="clearfix"></div>

          </div>

          <%= link_to '<i class="fa fa-plus"></i> Nuevo Comentario'.html_safe, new_comment_path, class: "btn btn-mini btn-success" %>

          <center>
            <%# link_to '<i class="fa fa-file-excel-o"></i> Excel'.html_safe, graduates_path(format: "xls"), class: "btn btn-mini btn-success" %>

            <%# link_to '<i class="fa fa-file-pdf-o"></i> PDF'.html_safe, graduates_path(format: "pdf"), class: "btn btn-mini btn-danger", target: '_blank' %>

            <%# link_to '<i class="fa fa-file-excel-o"></i> CSV'.html_safe, graduates_path(format: "csv"), class: "btn btn-mini btn-success" %>
          </center>

          <div class="x_content">

            <div id="comments">
              <%= render 'comments' %>
            </div>
            
          </div>

        </div>
      </div>
    </div>
  </div>
</div>


        
            
            

                   

                         

                               
                               






               



