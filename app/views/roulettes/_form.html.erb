<%= form_for(roulette) do |f| %>
  <div class="x_panel">
    <div class="x_title">
      <h2>Formulario Imagen Carrusel</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">

      <span class="help-inline", style="color:red">
        <strong><%= @roulette.errors[:base].any? ? @roulette.errors[:base].to_s[/\w([^"]*)/]: "" %></strong>
        <br>
      </span>

      <form class="form-horizontal form-label-left input_mask">

        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <ho style="color:#14B76E"> (*) Campo Obligatorio </ho>
          </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
          <%= f.hidden_field :user_id, value: current_user.id %>
          <br>
        </div>

        <div class="row">

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <i class="fa fa-picture-o" style= "margin-right: 10px;"></i><%= f.label "Añada una imagen:" %><ho style="color:#14B76E"> (*) </ho>
            <br>
            <br>
            <%= f.file_field :imagen_carrusel %>
            <span class="help-inline", style="color:red">
            <%= @roulette.errors[:imagen_carrusel].any? ? @roulette.errors[:imagen_carrusel].to_s[/\w([\s|A-zA-Z]\w*)+(.|\s)+\w/]: "" %></span>
            <br>
          </div>

        </div>

        <div class="ln_solid"></div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Nombre" %> <ho style="color:#14B76E"> (*) </ho>
            <span class="fa fa-bookmark form-control-feedback right" aria-hidden="true"></span>
            <%= f.text_field :nombre_carrusel, class: "form-control", placeholder: "Añada un nombre para identificar la imagen en el carrusel" %>
            <span class="help-inline", style="color:red">
            <%= @roulette.errors[:nombre_carrusel].any? ? @roulette.errors[:nombre_carrusel].to_s[/\w([^"]*)/]: "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="ln_solid"></div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Título" %>
            <span class="fa fa-pencil form-control-feedback right" aria-hidden="true"></span>
            <%= f.text_field :titulo_carrusel, class: "form-control", maxlength: "100", placeholder: "Título de no más de 100 caracteres" %>
            <span class="help-inline", style="color:red">
            <%= @roulette.errors[:titulo_carrusel].any? ? @roulette.errors[:titulo_carrusel].to_s[/\w([^"]*)/]: "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Subtítulo" %>
            <span class="fa fa-pencil form-control-feedback right" aria-hidden="true"></span>
            <%= f.text_field :subtitulo_carrusel, class: "form-control", maxlength: "100", placeholder: "Subtítulo de no más de 100 caracteres" %>
            <span class="help-inline", style="color:red">
            <%= @roulette.errors[:subtitulo_carrusel].any? ? @roulette.errors[:subtitulo_carrusel].to_s[/\w([^"]*)/]: "" %></span>
            <br>
          </div>
                      
        </div>

        <div class="row">
        <br>

          <div class="col-md-12 col-sm-12 col-xs-12 form-group has-feedback">
            <%= f.label "Cuerpo" %>
            <%= f.text_area :cuerpo_carrusel, class: "form-control", maxlength: "100", placeholder: "Cuerpo de no más de 100 caracteres" %>
            <br>
          </div>
                      
        </div>

        <div class="ln_solid"></div>

      </form>

    </div>

    <div class="actions">
      <%= button_tag type: 'submit', class: 'btn btn-mini btn-success' do %>
        <i class="glyphicon glyphicon-ok" aria-hidden="true"></i> Aceptar
      <% end %>
    </div>

  </div>
<% end %>

