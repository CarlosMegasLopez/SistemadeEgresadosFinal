                      <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :apellido_materno_egresado, class: "form-control", placeholder: "Apellido Materno" %>
                      <span class="help-inline", style="color:red">
                      <%= @graduate.errors[:apellido_materno_egresado].any? ? @graduate.errors[:apellido_materno_egresado].to_s[/\w([^"]*)/] : "" %></span>
                      <br>
                    </div>

                  </div>

                  <div class="ln_solid"></div>

                   <div class="row">
                   <br>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback" >
                      <%= f.label :cumpleanos, "Fecha de Nacimiento" %> <ho style="color:#14B76E"> (*) </ho>
                      <span class="fa fa-birthday-cake form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :cumpleanos_egresado, class: "form-control", placeholder: "Día/Mes/Año", 
                      :data => { :provide => 'datepicker'}, "data-date-format"=>'dd/mm/yyyy' %>
                      <span class="help-inline", style="color:red">
                      <%= @graduate.errors[:cumpleanos_egresado].any? ? @graduate.errors[:cumpleanos_egresado].to_s[/\w([^"]*)/] : "" %></span>
                      <br>
                    </div>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback">
                      <%= f.label :nacimiento, "Lugar de Nacimiento" %> <ho style="color:#14B76E"> (*) </ho>
                      <span class="fa fa-home form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :nacimiento_egresado, class: "form-control", placeholder: "Lugar de Nacimiento" %>
                      <span class="help-inline", style="color:red">
                      <%= @graduate.errors[:nacimiento_egresado].any? ? @graduate.errors[:nacimiento_egresado].to_s[/\w([^"]*)/] : "" %></span>
