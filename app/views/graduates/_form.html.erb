                      <span class="fa fa-envelope form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :codigo_postal_egresado, class: "form-control", placeholder: "Código Postal" %>
                      <span class="help-inline", style="color:red">
                      <%= @graduate.errors[:codigo_postal_egresado].any? ? @graduate.errors[:codigo_postal_egresado].to_s[/\w([^"]*)/] : "" %></span>
                       <br>
                    </div>

                    <div class="col-md-2 form-group has-feedback"></div>  

                  </div>   

