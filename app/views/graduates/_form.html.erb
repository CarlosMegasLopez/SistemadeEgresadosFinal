                      <%= f.label :curp, "C.U.R.P" %> 
                      <span class="fa fa-credit-card form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :curp_egresado, class: "form-control", placeholder: "C.U.R.P" %>
                      <br>
                    </div>

                  </div>

                  <div class="ln_solid"></div>

                  <div class="row">
                  <br>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback">
                      <%= f.label :Sexo %> <ho style="color:#14B76E"> (*) </ho>
                      <div class="col-md-12 col-sm-12 col-xs-12"> 
                        <% sexos = {'Femenino' => 'F', 'Masculino' => 'M'} %>
                        <% lista = sexos.sort %>
                        <% lista.each do |sexo| %>
                          <div class="radio-inline">
                            <%= f.radio_button :sexo_egresado, sexo[1] %>
                            <label for="<%= sexo[1] %>"><%= sexo[0] %></label>
                          </div>
                        <% end %>
                        <span class="help-inline", style="color:red">
                        <%= @graduate.errors[:sexo_egresado].any? ? @graduate.errors[:sexo_egresado].to_s[/\w([^"]*)/] : "" %></span>
                        <br>
                      </div>
                    </div>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback">
                       <%= f.label :estado_civil, "Estado Civil" %>
                        <% estados = {'Soltero(a)' => 'Soltero(a)', 'Comprometido(a)' => 'Comprometido(a)', 'Casado(a)' => 'Casado(a)', 'Divorciado(a)' => 'Divorciado(a)', 'Viudo(a)' => 'Viudo(a)'} %>
                        <% lista3 = estados.sort %>
                        <%= f.select :estado_civil_egresado, lista3, {:prompt => "--Seleccionar--"}, class: "form-control" %>
                        <br>
                    </div>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback">
                       <%= f.label :hijos, "Hijos" %>
                       <span class="fa fa-child form-control-feedback right" aria-hidden="true"></span>
                       <%= f.number_field :hijos_egresado, class: "form-control", min: 0, max: 50, step: 1, placeholder: "Número de Hijos" %>
                       <br>
                    </div>

                    <div class="col-md-3 col-sm-6 col-xs-12 form-group has-feedback">
                      <%= f.label :rfc, "R.F.C" %> 
                      <span class="fa fa-credit-card form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :rfc_egresado, class: "form-control", placeholder: "R.F.C" %>
                      <br>
                    </div>

                  </div>   

                  <div class="ln_solid"></div> 

                  <div class="row">
                  <br>
                    
                    <div class="col-md-4 col-sm-6 col-xs-12 form-group has-feedback">
                      <%= f.label :promedio, "Promedio" %> 
                      <span class="fa fa-graduation-cap form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :promedio_egresado, class: "form-control", placeholder: "Promedio Final" %>
                      <br>
                    </div>

                    <div class="col-md-4 col-sm-6 col-xs-12 form-group has-feedback">
                    <%= f.label :Status %> <ho style="color:#14B76E"> (*) </ho>
                      <div class="col-md-12 col-sm-12 col-xs-12"> 
                        <% statuss = {'Si Titulado' => 'Si', 'No Titulado' => 'No'} %>
                        <% lista2 = statuss.sort %>
                        <% lista2.each do |status| %>
                          <div class="radio-inline">
                           <%= f.radio_button :status_egresado, status[1] %>
                          <label for="<%= status[1] %>"><%= status[0] %></label>
                          </div>
                        <% end %>
                        <span class="help-inline", style="color:red">
                        <%= @graduate.errors[:status_egresado].any? ? @graduate.errors[:status_egresado].to_s[/\w([^"]*)/] : "" %></span>
                        <br>
                      </div>
                      <br>
                    </div>

                    <div class="col-md-4 col-sm-12 col-xs-12 form-group has-feedback">
                      <%= f.label :nivel, "Nivel Académico" %> <ho style="color:#14B76E"> (*) </ho>
                      <% niveles = {'Licenciatura' => 'Licenciatura', 'Maestría' => 'Maestría', 'Posgrado' => 'Posgrado', 'Doctorado' => 'Doctorado'} %>
                        <% lista4 = niveles %>
                        <%= f.select :nivel_egresado, lista4, {:prompt => "--Seleccionar--"}, class: "form-control" %>
                        <span class="help-inline", style="color:red">
                        <%= @graduate.errors[:nivel_egresado].any? ? @graduate.errors[:nivel_egresado].to_s[/\w([^"]*)/] : ""%></span>
                      <br>
                    </div>

                  </div>

