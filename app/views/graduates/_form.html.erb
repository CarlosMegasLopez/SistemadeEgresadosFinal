                      <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :apellido_paterno_egresado, class: "form-control", placeholder: "Apellido Paterno" %>
                      <span class="help-inline", style="color:red">
                      <%= @graduate.errors[:apellido_paterno_egresado].any? ? @graduate.errors[:apellido_paterno_egresado].to_s[/\w([^"]*)/] : "" %></span>
                      <br>
                    </div>

                    <div class="col-md-4 col-sm-6 col-xs-12 form-group has-feedback">
