                      <%= f.label :externa, "Matrícula Externa" %> 
                      <span class="fa fa-user form-control-feedback right" aria-hidden="true"></span>
                      <%= f.text_field :externa_egresado, class: "form-control", placeholder: "9 - 12 caracteres" %>
