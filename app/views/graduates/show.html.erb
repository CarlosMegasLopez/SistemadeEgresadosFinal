<div class="right_col" role="main">
  <div class="">
  <div class="row">
     <div class="title_left">
          <h3>Mostrar Egresado</h3> 
      </div>
    <div class="x_panel">
            <div class="x_title">

                <% if notice.present? %>
                  <div class="alert alert-info alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">X</span></button> 
                      <%= notice %>
                  </div>
                <% end %>

              <h2>Formulario Egresado</h2>
              <ul class="nav navbar-right panel_toolbox">
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                </li>
              </ul>
              <div class="clearfix"></div>
            </div>
            <div class="x_content">
              <br/>

            <div class="col-md-1 col-xs-0"></div>
                <div class="row">
                    <div class="col-md-10 col-sm-10 col-xs-10">
                        <div class="panel panel-primary" style="margin: 1em;">
                            <div class="panel-heading" style="padding: 10px 15px;">
                                <h3 class="panel-title"><i class="glyphicon glyphicon-user"></i> Información General</h3>  
                            </div> 

                          <div class="row">
                            <div class="panel-body" style="padding: 10px;">
                                
                               <div class="col-md-12 col-sm-12 col-xs-12 has-feedback">
                                <center>
                                  <%= image_tag @graduate.avatar_egresado.thumb.url, class: "img-responsive img-thumbnail" %>
                                </center>
                              </div>

                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                              </div>

                            </div>
                          </div>
            

                          <div class="row">
                            <div class="panel-body" style="padding: 10px;">

                              <div class="col-md-3 has-feedback"></div>
                             
                              <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                              <center>
                                <strong >Nombre:</strong>
                                <div><%= @graduate.nombre_completo_egresado %></div>
                              </center>
                            </div>

                              <div class="col-md-3 has-feedback"></div>

                              <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                              </div>
                
                            </div>
                          </div>

                          <div class="row">
                            <div class="panel-body" style="padding: 10px;">

                              <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                <strong>Matricula Interna:</strong>
                                <div><%= @graduate.matricula_egresado %></div>
                                <br>
                              </div>

                              <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                <strong>Matricula Externa:</strong>
                                <div><%= @graduate.externa_egresado %></div>
                                <br>
                              </div>
                             
                              <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                <strong>Facultad:</strong>
                                <div><%= @graduate.career.descripcion_carrera %></div>
                                <br>
                              </div>

                              <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                <strong>Generación:</strong>
                                 <div><%= @graduate.generation.descripcion_generacion if @graduate.generation.present? %></div>
                                 <br>
                              </div>                      

                                <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                                </div>

                            </div>
                          </div>

                          <div class="row">
                              <div class="panel-body" style="padding: 10px;">

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Fecha de Nacimiento:</strong>
                                  <div><%= @graduate.cumpleanos_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                   <strong>Lugar de Nacimiento:</strong>
                                  <div><%= @graduate.nacimiento_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Nacionalidad:</strong>
                                  <div><%= @graduate.nacionalidad_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>C.U.R.P.:</strong>
                                  <div><%= @graduate.curp_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                                </div>
                              
                              </div>
                          </div> 
                          
                          <div class="row">
                              <div class="panel-body" style="padding: 10px;">

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Sexo:</strong>
                                  <div><%= @graduate.sexo_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                   <strong>Estado Civil:</strong>
                                  <div><%= @graduate.estado_civil_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Hijos:</strong>
                                  <div><%= @graduate.hijos_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 col-sm-6 col-xs-12 has-feedback">
                                  <strong>R.F.C.:</strong>
                                  <div><%= @graduate.rfc_egresado %></div>
                                  <br>
                                </div>
                              
                              </div>
                          </div>

                        <div class="panel-heading" style="padding: 10px;">
                          <h3 class="panel-title"><i class="fa fa-graduation-cap"></i> Detalles Académicos</h3>  
                        </div> 

                          <div class="row">
                          <br>

                            <div class="panel-body" style="padding: 10px;"> 

                                <div class="col-md-3 hidden-sm has-feedback"></div>  

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Promedio:</strong>
                                  <div><%= @graduate.promedio_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Titulado:</strong>
                                  <div><%= @graduate.status_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Nivel Académico:</strong>
                                  <div><%= @graduate.nivel_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 has-feedback"></div>    

                           </div>        
                          </div>                              

                          <div class="panel-heading" style="padding: 10px;">
                                <h3 class="panel-title"><i class="glyphicon glyphicon-home"></i> Domicilio</h3>  
                          </div>  

                            <div class="row">
                            <br>

                              <div class="panel-body" style="padding: 10px;">

                                <div class="col-md-3 hidden-sm has-feedback"></div>  

                                <div class="col-md-2 col-sm-12 col-xs-12 has-feedback">
                                  <strong>Calle:</strong>
                                  <div><%= @graduate.calle_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Interior:</strong>
                                  <div><%= @graduate.interior_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Entre Calles:</strong>
                                  <div><%= @graduate.referencia_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-3 has-feedback"></div> 

                                <div class="col-md-12 col-sm-12 col-xs-12">
                                <hr style="border-color:black; margin-bottom: 0px;">
                                </div> 
                                  
                              </div>

                            </div>

                            <div class="row">
                            <br>

                              <div class="panel-body" style="padding: 10px;">

                              <div class="col-md-4 hidden-sm has-feedback"></div>  

                              <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Colonia:</strong>
                                  <div><%= @graduate.colonia_egresado %></div>
                                  <br>
                                </div>

                              <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                <strong>Código Postal:</strong>
                                <div><%= @graduate.codigo_postal_egresado %></div>
                                <br>
                              </div>

                              <div class="col-md-4 has-feedback"></div>  

                              </div>

                            </div>

                        <div class="panel-heading" style="padding: 10px;">
                          <h3 class="panel-title"><i class="fa fa-briefcase"></i> Detalles Laborales</h3>  
                        </div> 

                          <div class="row">
                          <br>

                            <div class="panel-body" style="padding: 10px;">

                                <div class="col-md-4 col-sm-12 col-xs-12 has-feedback">
                                  <strong>Lugar de Trabajo:</strong>
                                  <div><%= @graduate.trabajo_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-4 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Puesto:</strong>
                                  <div><%= @graduate.puesto_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-4 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Teléfono de Trabajo:</strong>
                                  <div><%= @graduate.teltrabajo_egresado %></div>
                                  <br>
                                </div>

                           </div>        
                          </div>              

                          <div class="panel-heading" style="padding: 10px;">
                                <h3 class="panel-title"><i class="glyphicon glyphicon-envelope"></i> Contacto</h3>  
                          </div> 

                          <div class="row">
                          <br>

                              <div class="panel-body" style="padding: 10px;">

                              <div class="col-md-3 hidden-sm has-feedback"></div>  
  

                              <div class="col-md-2 col-sm-12 col-xs-12 has-feedback">
                                  <strong>Celular:</strong>
                                  <div><%= @graduate.celular_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Teléfono de Casa:</strong>
                                  <div><%= @graduate.otro_telefono_egresado %></div>
                                  <br>
                                </div>

                                <div class="col-md-2 col-sm-6 col-xs-12 has-feedback">
                                  <strong>Email:</strong>
                                  <div><%= @graduate.correo_electronico_egresado %></div>
                                  <br>
                                </div>

                              <div class="col-md-3 has-feedback"></div>    

                              </div>
                            </div> 

                        </div>
                    </div>
                  </div>
            <div class="col-md-1 col-xs-0"></div>

            </div>
        </div>   
        
      <%= link_to 'Volver', graduates_path, :class => "btn btn-round btn-dark" %>
      <%= link_to 'Editar', edit_graduate_path(@graduate), :class => "btn btn-round btn-primary" %>
      <%= link_to 'Nuevo', new_graduate_path, :class => "btn btn-round btn-success" %>  
        
   </div>
  </div>
</div>
