                          </div>

                          <div class="x_content">

            								    <%= form_for @search do |f| %>

                                <%= f.label :kerwords, "Keywords" %>
                                <%= f.text_field :keywords, :class => 'form-control' %>

                                <%= f.label :carrera, "Carrera" %>
